    "all-contributors-cli": "6.19.0",
    "codecov": "3.8.1",
    "docz": "2.3.1",
    "docz-theme-default": "1.2.0",
    "docz-utils": "2.3.0",
    "eslint": "7.18.0",
    "kcd-scripts": "7.5.5",
    "prettier": "^2.2.1",
    "react": "17.0.1",
    "react-dom": "^17.0.1",
